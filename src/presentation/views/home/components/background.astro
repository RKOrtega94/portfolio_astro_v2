---
import bgImage from "../../../../assets/images/img1.jpg";
---

<div
  id="bg-image"
  class="z-0 w-full h-full relative bg-cover bg-right"
  style=`background-image: url(${bgImage.src});`
>
  <div
    class="h-full w-full bg-gradient-to-tr from-white to-transparent absolute -z-40"
  >
  </div>
  <div
    class="h-full w-full bg-gradient-to-bl from-white to-transparent absolute -z-40"
  >
  </div>
</div>

<style>
  #bg-image {
    background-position: right top;
  }

  /* Gradient efect from md devices make withe left of screen */
  @media (min-width: 768px) {
    #bg-image {
    }
  }
</style>
