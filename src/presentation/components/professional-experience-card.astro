---
const {
  company,
  companyLogo,
  jobTitle,
  location,
  from,
  to,
  description,
  activities,
} = Astro.props;
---

<article
  class="w-full flex flex-col p-1 shadow-md rounded-md border border-gray-300 bg-white h-full"
>
  <section class="w-full flex justify-start items-center">
    <img src={companyLogo} alt="Edisoft" class="w-1/4 h-auto" />
    <div class="w-3/4 h-full px-4">
      <h6 class="text-lg font-bold m-0">
        {company}
        <span class="text-sm font-medium text-gray-700 ml-2">{location}</span>
      </h6>
      <span>{from} - {to ?? "Current"}</span>
    </div>
  </section>
  <span>
    {description}
  </span>
  <section class="text-sm font-light">
    <ul class="list-disc">
      {activities.map((activity) => <li>{activity}</li>)}
    </ul>
  </section>
</article>
